<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shopping_App.Views.AddItemView"
             Title="Add new Item">
    <VerticalStackLayout Margin="30,0">
        <VerticalStackLayout Spacing="20">
            <Entry Margin="0,40,0,20" Text="{Binding ItemCode}" Placeholder="Enter Item Name"/>
            <Entry Margin="0,40,0,20" Text="{Binding ItemCode}" Placeholder="Enter Item Description"/>
            <Entry Margin="0,40,0,20" Text="{Binding ItemCode}" Placeholder="Enter Item Price"/>

            <Button Text="Save" Command="{Binding SaveItem}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>